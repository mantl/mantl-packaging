[Unit]
Description={{.Description}}
Documentation={{.URL}}
After=network-online.target
Wants=network-online.target

[Service]
User={{.Name}}
Group={{.Name}}
ExecStartPre=-/bin/touch /var/log/traefik/access.log
ExecStartPre=-/bin/touch /var/log/traefik/traefik.log
ExecStart=/usr/bin/traefik -c /etc/traefik/traefik.toml
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
LimitNOFILE=65536
Restart=on-failure

[Install]
WantedBy=multi-user.target
Restart=on-failure
